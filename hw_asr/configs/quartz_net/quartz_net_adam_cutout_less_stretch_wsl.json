{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_fft": 512,
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "TimeStretch",
        "args":{
          "min_rate": 0.8,
          "max_rate": 1.25,
          "p": 0.5,
          "sample_rate": 16000
        }
      },
      {
        "type": "AddBackgroundNoise",
        "args":{
          "sample_rate": 16000
        }
      }
    ],
    "spectrogram": [
      {
        "type": "CutOut",
        "args":{
          "rect_freq": 25,
          "rect_masks": 3,
          "rect_time": 60
        }
      }
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 64
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "~/librispeech"
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "~/librispeech"
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "~/librispeech"
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "~/librispeech"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 200,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
